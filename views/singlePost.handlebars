<div class="col-6">

    {{> postData post}}

    {{#if loggedIn}}
    <form class="newComment-form">
        <div class="input-group m-1 w-75">
            {{!-- <span class="input-group-text">Leave a comment</span> --}}
            <textarea class="form-control" aria-label="commentTextArea" id="comment_text">Leave a comment</textarea>
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Comment</button>
        </div>
    </form>

    {{/if}}
</div>


<div class="col-4">
    <h4 class=" p-2 text-center"> Comment Section</h4>
    {{#each post.comments as |comment|}}
    {{> commentData}}
    {{/each}}

</div>
{{#if loggedIn}}
<script src="/js/addComment.js"></script>

{{/if}}